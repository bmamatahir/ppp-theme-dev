<div class="bg-light py-0 py-md-5 px-3 text-center">
    <div class="my-5 py-5">
        <h1 class="h1">{{ blog.title }}</h1>
        <p class="lead">We are everywhere, Keep your eyes on us</p>
    </div>
</div>


<div class="container py-5">
    {% paginate blog.articles by 4 %}
        <div class="row row-col-1 row-col-md-2 rows-col-lg-3 gap-3 mb-4">

            {% for article in blog.articles %}
                <div class="col card  shadow-sm">
                    {% if article.image != blank %}
                        <img class="card-img-top" src="{{ article.image | img_url: '320x260' }}"
                             alt="{{ article.image.alt | escape }}">
                    {% else %}
                        {{ 'image' | placeholder_svg_tag: 'card-img-top' }}
                    {% endif %}
                    <div class="card-body">
                        <h2><a href="{{ article.url }}">{{ article.title }}</a></h2>
                        {{ article.author }} @ {{ article.created_at | date: '%B %d, %Y' }}
                        <div>
                            {% if article.excerpt.size > 0 %}
                                {{ article.excerpt }}
                            {% else %}
                                <p>{{ article.content | strip_html | truncatewords: 30 }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {% render 'pagination', paginate: paginate %}

    {% endpaginate %}

</div>
